{
  "name": "gha-slugify",
  "version": "1.0.1",
  "description": "Github Action to Slugify a Value in a Workflow",
  "main": "index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt -s --no-source-map-register",
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "preversion": "rm -rf ./dist/* && mkdir ./dist && touch ./dist/.gitkeep",
    "version": "npm run build && action-docs --toc-level 3 --update-readme --no-banner && doctoc README.md && git add -A dist README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luscii/gha-slugify.git"
  },
  "keywords": [
    "github",
    "action",
    "github-actions",
    "slugify"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Luscii/gha-slugify/issues"
  },
  "homepage": "https://github.com/Luscii/gha-slugify#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.1.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^20.3.1",
    "@vercel/ncc": "^0.36.1",
    "action-docs": "^1.2.0",
    "doctoc": "^2.2.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^5.1.3"
  },
  "ts-standard": {
    "ignore": [
      "dist"
    ]
  }
}
