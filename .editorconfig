root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2
insert_final_newline = false

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# Markdown Files
[*.{md,mdx}]
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# Web Files
[*.{js,jsm,ts,tsx,cjs,cts,ctsx,mjs,mts,mtsx,svg}]
indent_size = 2
